<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_bottom_bottom">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vp_product_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="400dp">
                    </androidx.viewpager.widget.ViewPager>
                    <LinearLayout
                        android:id="@+id/ll_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingBottom="@dimen/activity_margin"
                        android:gravity="center_horizontal">

<!--                        <ImageView-->
<!--                            android:id="@+id/iv_indicator_product_img"-->
<!--                            android:layout_width="5dp"-->
<!--                            android:layout_height="5dp"-->
<!--                            android:src="@drawable/shape_circle_red"/>-->
                    </LinearLayout>
                    <com.example.risingtest.src.product.CircleIndicator
                        android:id="@+id/ci_product_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                    </com.example.risingtest.src.product.CircleIndicator>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_product_bunjang_logo"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="pin"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        app:layout_collapseMode="pin"
                        android:paddingHorizontal="@dimen/activity_horizontal_margin">
                        <ImageView
                            android:id="@+id/iv_product_toolbar_back"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_back_white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:id="@+id/tv_product_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_product_toolbar_back"
                            android:layout_marginStart="@dimen/activity_little_margin"
                            android:visibility="invisible"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="상품 정보"/>
                        <ImageView
                            android:id="@+id/iv_product_toolbar_search"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginEnd="@dimen/activity_little_margin"
                            app:layout_constraintRight_toLeftOf="@id/iv_product_toolbar_share"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <ImageView
                            android:id="@+id/iv_product_toolbar_share"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_share"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin">
                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="10,000"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_product_price"
                        android:text="원"
                        android:textSize="20sp"
                        android:textColor="@color/black" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pay_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_won"
                        android:layout_marginStart="@dimen/activity_margin"/>
                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        app:layout_constraintRight_toLeftOf="@id/iv_price_avg"
                        android:layout_marginRight="@dimen/activity_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/light_light_light_gray"/>
                    <ImageView
                        android:id="@+id/iv_price_avg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_product_price_avg"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_margin">

                    <TextView
                        android:id="@+id/tv_safety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안전"
                        android:textColor="@color/green"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="푸마 남성 반팔 라운드(사이즈M)"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/activity_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_safety"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_margin">
                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_product_time"/>
                    <TextView
                        android:id="@+id/tv_brand_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14시간 전"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_time"/>
                    <ImageView
                        android:id="@+id/iv_view_count"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_brand_time"
                        android:layout_marginStart="@dimen/activity_margin"
                        android:src="@drawable/ic_view_count"/>
                    <TextView
                        android:id="@+id/tv_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_view_count"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                        android:id="@+id/iv_zzim"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_product_zzim_count"
                        android:layout_marginStart="@dimen/activity_margin"
                        app:layout_constraintLeft_toRightOf="@id/tv_view_count"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_zzim_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        app:layout_constraintLeft_toRightOf="@id/iv_zzim"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:paddingHorizontal="@dimen/activity_margin"
                    android:paddingVertical="13dp"
                    android:elevation="5dp"
                    android:outlineSpotShadowColor="@color/light_dark_gray"
                    android:background="@drawable/shape_rect_white">
                    <ImageView
                        android:id="@+id/iv_ad"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_coin_product_ad"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최대 3천원 할인(카카오페이/카드 등 결제 시)"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_marginStart="@dimen/activity_margin"
                        app:layout_constraintLeft_toRightOf="@id/iv_ad"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_next"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_little_margin"
                    android:weightSum="13"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_product_kakao"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_product_naver"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_product_band"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_product_share"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_product_message"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/light_light_light_gray"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_share_gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@color/light_light_light_gray"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_little_margin"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin">
                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_procut_address"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/iv_address"
                        android:textSize="15sp"
                        android:textColor="@color/light_gray"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="전라남도 여수시 여천동"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_little_margin"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_product_new_or_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray"
                        android:text="중고"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray"
                        android:textSize="13sp"
                        android:text="・"/>
                    <TextView
                        android:id="@+id/tv_product_delivery_fee"
                        android:layout_width="wrap_content"
                        android:textColor="@color/light_gray"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="배송비별도"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="・"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray"
                        android:textSize="13sp"
                        android:text="총"/>
                    <TextView
                        android:id="@+id/tv_product_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:text="1개"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_product_writing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_more_margin"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:text="사이즈가 안맞아서 한번도 못착용했어요 \n새제품이라고 보시면 돼요"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    tools:ignore="TextViewEdits" />
                <TextView
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_more_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태그로 검색하기"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flex_box_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    app:alignContent="stretch"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin">
                </com.google.android.flexbox.FlexboxLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_little_margin">
                    <ImageView
                        android:id="@+id/iv_category"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_product_cateory"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숄더백"
                        android:textSize="13sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_category"
                        android:layout_marginStart="5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="@dimen/activity_little_margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:paddingHorizontal="@dimen/activity_little_margin"
                    android:paddingVertical="@dimen/activity_little_margin"
                    android:background="@drawable/shape_rect_yellow">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_yellow_alertpng"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계좌 입금은 금전적 피해가 있을 수 있으니\n안전결제를 이용해주세요"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/activity_little_margin"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@color/light_light_light_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/activity_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/tv_ask_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="상품 문의하기 0"
                        android:textSize="15sp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/light_light_light_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="신고하기"
                        android:textSize="15sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_light_light_gray"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_more_margin"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:paddingVertical="@dimen/activity_margin"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iv_store_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:cardCornerRadius="30dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_brand_detail_product_name"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나는마시마로"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_store_img"
                        android:layout_marginStart="@dimen/activity_margin"/>
                    <ImageView
                        android:id="@+id/iv_authorization"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_check_authorization"
                        android:layout_marginStart="5dp"
                        app:layout_constraintLeft_toRightOf="@id/iv_store_img"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_store_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="본인인증"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/bunjang_light_light_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_store_name"
                        app:layout_constraintLeft_toRightOf="@id/iv_authorization"/>
                    <ImageView
                        android:id="@+id/iv_store_zzim"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_store_zzim"/>
                    <View
                        android:id="@+id/view_bottom"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        app:layout_constraintRight_toLeftOf="@id/iv_store_zzim"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="5dp"
                        android:background="@color/light_light_light_gray"/>
                    <TextView
                        android:id="@+id/tv_follow_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/activity_margin"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/view_bottom"/>
                    <TextView
                        android:id="@+id/tv_follow_follw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text="팔로워"
                        app:layout_constraintRight_toLeftOf="@id/tv_follow_count"
                        android:textSize="13sp"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_product_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:paddingVertical="@dimen/activity_margin"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/iv_cardview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/iv_product_img_small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_product_img_sample"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_product_price_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/activity_margin"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@id/iv_cardview"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_won_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@id/tv_product_price_small"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송비별도"
                android:textSize="13sp"
                android:textColor="@color/light_dark_gray"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@id/tv_won_small"
                android:layout_marginStart="@dimen/activity_margin"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_product_name_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="폴로 걸즈 가디건 블랙 L 새상품"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/activity_margin"
                app:layout_constraintLeft_toRightOf="@id/iv_cardview"
                app:layout_constraintTop_toBottomOf="@id/tv_product_price_small"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toLeftOf="@id/ll_store_name"
                android:background="@color/light_light_light_gray"
                android:layout_marginEnd="@dimen/activity_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/ll_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_store_name_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모닝상점"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_store_name_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_store_star"/>
                    <TextView
                        android:id="@+id/tv_store_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_count_review"/>
                    <TextView
                        android:id="@+id/tv_count_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(13)"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <View
        android:id="@+id/view_bottom_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        android:background="@color/light_light_light_gray"/>
    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:weightSum="6">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_product_zzim"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_light_light_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="번개톡"
            android:background="@color/white"
            android:textColor="@color/bunjang_light_pink"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="번개페이 안전결제"
            android:textColor="@color/white"
            android:background="@color/bunjang_light_pink"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="3"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
