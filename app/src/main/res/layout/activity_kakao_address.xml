<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/tv_address_plus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_cancel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="60dp"
            android:text="주소 찾기"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_little_margin"
            android:background="@drawable/shape_rect_full_light_light_gray"
            android:gravity="center_vertical"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/activity_little_margin"
                android:src="@drawable/ic_gray_search"/>
            <EditText
                android:id="@+id/edt_input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="주소를 입력해주세요"
                android:textColor="@color/light_light_light_light_gray"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_margin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소 입력 예시"
                android:layout_marginTop="@dimen/activity_little_margin"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/light_gray"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 도로명+건물번호 : 서초대로38길 12"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_more_margin"
                android:textColor="@color/light_dark_gray"
                android:textSize="15sp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 동/읍/면/리+번지 : 서초동 1498-5"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_more_margin"
                android:textColor="@color/light_dark_gray"
                android:textSize="15sp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 건물명, 아파트명 : 서초동 마제스타시티"
                android:layout_marginStart="@dimen/activity_more_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:textColor="@color/light_dark_gray"
                android:textSize="15sp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>