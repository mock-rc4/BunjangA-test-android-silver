<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="150dp"
            android:id="@+id/vp_login_ment"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_top_more_more_margin"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_indicator_login_01"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/shape_circle_black"/>
            <ImageView
                android:id="@+id/iv_indicator_login_02"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/activity_margin"
                android:src="@drawable/shape_circle_gray"/>
            <ImageView
                android:id="@+id/iv_indicator_login_03"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/activity_margin"
                android:src="@drawable/shape_circle_gray"/>
            <ImageView
                android:id="@+id/iv_indicator_login_04"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/activity_margin"
                android:src="@drawable/shape_circle_gray"/>

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_kakao_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_more_margin"
            android:layout_marginTop="@dimen/activity_top_more_margin"
            android:background="@drawable/shape_circle_yellow">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/activity_start_padding"
                android:src="@drawable/ic_kakaotalk"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_kakaotalk"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_login_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_other"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_top_more_margin"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>